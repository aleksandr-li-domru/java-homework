<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:VerticalPanel spacing="10">
            <g:Hidden name="id" ui:field="idText"/>
            <g:HorizontalPanel>
                <g:Label text="Title:" width="100px"/>
                <g:TextBox name="title" ui:field="titleText" width="200px"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label text="Description:" width="100px"/>
                <g:TextBox name="descr" ui:field="descrText" width="200px"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label text="Статус:" width="100px"/>
                <g:ListBox  name="status" ui:field="statusSel" width="200px"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label text="Владелец:" width="100px"/>
                <g:ListBox  name="owner" ui:field="ownerSel" width="200px"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label text="Исполнитель:" width="100px"/>
                <g:ListBox  name="exec" ui:field="execSel" width="200px"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Button ui:field="btnSubmit">Отправить</g:Button>
                <g:Button ui:field="btnClear">Очистить</g:Button>
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </g:DecoratorPanel>
</ui:UiBinder>